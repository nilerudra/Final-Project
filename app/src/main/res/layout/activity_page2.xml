<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    android:padding="20dp">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/login"
        android:layout_width="112dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/edt2"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="78dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="#FEAA0C"
        android:backgroundTint="#BC2C2C"
        android:fontFamily="sans-serif-black"
        android:text="log in"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#0E0000"
        android:textSize="24sp"
        android:textStyle="bold"
        app:backgroundTintMode="add" />


    <EditText
        android:id="@+id/edt1"
        style="@android:style/Widget.Holo.AutoCompleteTextView"
        android:layout_width="374dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_marginTop="51dp"
        android:background="#863E3E3E"
        android:backgroundTint="#272727"
        android:drawableLeft="@drawable/baseline_person_outline_24"
        android:drawablePadding="10dp"
        android:ems="5"
        android:fontFamily="serif"
        android:hint="Username"
        android:padding="20dp"
        android:textAlignment="textStart"
        android:textColor="?android:attr/colorPressedHighlight"
        android:textColorHint="?android:attr/colorPressedHighlight"
        android:textSize="20sp"
        android:typeface="monospace" />

    <EditText
        android:id="@+id/edt2"
        style="@android:style/Widget.Holo.AutoCompleteTextView"
        android:layout_width="374dp"
        android:layout_height="67dp"
        android:layout_below="@+id/edt1"
        android:layout_marginTop="34dp"
        android:background="#863E3E3E"
        android:backgroundTint="#272727"
        android:drawableLeft="@drawable/baseline_vpn_key_24"
        android:drawablePadding="10dp"
        android:ems="5"
        android:fontFamily="serif"
        android:hint="Password"
        android:padding="20dp"
        android:textAlignment="textStart"
        android:textColor="?android:attr/colorPressedHighlight"
        android:textColorHint="?android:attr/colorPressedHighlight"
        android:textSize="20sp"
        android:typeface="monospace"
        android:inputType="textPassword"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-black"
        android:gravity="center"
        android:layout_marginTop="100dp"
        android:selectAllOnFocus="false"
        android:singleLine="true"
        android:text="Sign in"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="?android:attr/colorPressedHighlight"
        android:textSize="34sp"
        android:typeface="monospace" />

    <TextView
        android:id="@+id/fp"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_below="@id/login"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="16dp"
        android:minHeight="48dp"
        android:text="Forgot password"
        android:textColor="?android:attr/colorPressedHighlight" />

    <TextView
        android:id="@+id/si"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:text="Sign in with"
        android:textColor="?android:attr/colorPressedHighlight" />

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/login"
            android:id="@+id/ll"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="180dp"
            android:src="@drawable/google" />

</RelativeLayout>







